{
  "name": "@wyvernzora/epub-builder",
  "version": "0.0.1",
  "description": "Pull online stuff into EPUB",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "jest",
    "start": "ts-node src/run.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wyvernzora/scrappy.git"
  },
  "author": "Denis Luchkin-Zhou <wyvernzora@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wyvernzora/scrappy/issues"
  },
  "homepage": "https://github.com/wyvernzora/scrappy#readme",
  "dependencies": {
    "@wyvernzora/epub-jsx": "^1.1.0",
    "base-x": "^3.0.9",
    "chalk": "^4.1.0",
    "debug": "^4.3.1",
    "html-minifier": "^4.0.0",
    "htmltidy2": "^0.3.0",
    "jszip": "^3.5.0",
    "locale-enum": "^1.1.1",
    "minimatch": "^3.0.4",
    "preact": "^10.6.4",
    "short-uuid": "^4.1.0"
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.0",
    "@types/jest": "^26.0.19",
    "@types/jszip": "^3.4.1",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^14.14.16",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "rootDir": "./",
    "testMatch": [
      "**/test/**/*.test.(ts|tsx)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageReporters": [
      "html",
      "text-summary"
    ]
  }
}
